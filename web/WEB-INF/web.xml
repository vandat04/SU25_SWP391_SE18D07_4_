<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

    <!--
    ================================================================
    MINIMAL WEB CONFIGURATION FOR JSP TESTING
    This configuration removes servlet mappings temporarily to allow
    deployment and testing of JSP pages only.
    ================================================================
    -->

    <!--
    ================================================================
    SESSION CONFIGURATION
    ================================================================
    -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes -->
    </session-config>

    <!--
    ================================================================
    WELCOME FILE - Direct JSP access
    ================================================================
    -->
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file>
    </welcome-file-list>

    <!--
    ================================================================
    ERROR PAGES
    ================================================================
    -->
    <error-page>
        <error-code>404</error-code>
        <location>/404Loi.jsp</location>
    </error-page>

    <!--
    ================================================================
    SERVLET MAPPINGS - ENABLED FOR CART SYSTEM TESTING
    ================================================================
    -->
    
    <servlet>
        <servlet-name>CartControll</servlet-name>
        <servlet-class>controller.cart_order.CartControll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartControll</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>controller.cart_order.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderManagementControl</servlet-name>
        <servlet-class>controller.cart_order.OrderManagementControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderManagementControl</servlet-name>
        <url-pattern>/order-management</url-pattern>
    </servlet-mapping>

    <!--
    ================================================================
    TICKET SERVLETS - ENABLED FOR TICKET FUNCTIONALITY
    ================================================================
    -->
    
    <servlet>
        <servlet-name>TicketDetailControl</servlet-name>
        <servlet-class>controller.ticket.TicketDetailControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketDetailControl</servlet-name>
        <url-pattern>/ticket-detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketListControl</servlet-name>
        <servlet-class>controller.ticket.TicketListControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketListControl</servlet-name>
        <url-pattern>/ticket-list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VillageTicketControl</servlet-name>
        <servlet-class>controller.craft.VillageTicketControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VillageTicketControl</servlet-name>
        <url-pattern>/village-ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SimpleVillageTicketControl</servlet-name>
        <servlet-class>controller.craft.SimpleVillageTicketControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleVillageTicketControl</servlet-name>
        <url-pattern>/simple-village-ticket</url-pattern>
    </servlet-mapping>

</web-app>

